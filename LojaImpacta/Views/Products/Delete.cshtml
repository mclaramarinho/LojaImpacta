@model LojaImpacta.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<a asp-action="Index" class="btn btn-md btn-outline-none text-dark">
    <i class="bi bi-chevron-compact-left"></i>
    Voltar
</a>
<h1>Excluir produto</h1>
<h3>Tem certeza que deseja excluir o item abaixo?</h3>
<div>
    <h4>#@Model.ProductID | @Model.ProductName</h4>
    <hr />
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model=>model.Description)</th>
                <th>@Html.DisplayNameFor(model=>model.Price)</th>
                <th>@Html.DisplayNameFor(model=>model.AmountAvailabel)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Description</td>
                <td>R$@Model.Price</td>
                <td>@Model.AmountAvailabel</td>
            </tr>
        </tbody>
    </table>

    <form asp-action="Delete">
        <input type="submit" value="Excluir produto" class="btn btn-danger" />
    </form>
</div>
