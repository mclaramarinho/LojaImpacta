@model LojaImpacta.Models.Product

@{
    ViewData["Title"] = "Details";
}
<a asp-action="Index" class="btn btn-md btn-outline-none text-dark">
    <i class="bi bi-chevron-compact-left"></i>
    Voltar
</a>
<h1>#@Model.ProductID | @Model.ProductName</h1>
<hr />
<div class="container">
    <div class="row">
        <img src="@Model.ImageUrl" class="col-12 col-md-4 mw-100 d-block" />
        <div class="col-12 col-md-8">
            <div class="container">
                <b class="row">
                    Descrição do produto:
                </b>
                <p class="row">
                    @Model.Description
                </p>
            </div>
            <div class="container">
                <b class="row">
                    Preço unitário:
                </b>
                <p class="row">
                    R$@Model.Price
                </p>
            </div>
            <div class="container">
                <b class="row">
                    Qtd. em estoque:
                </b>
                <p class="row">
                    @Model.AmountAvailabel
                </p>
            </div>
            <div class="container">
                <div class="row row-cols-auto">
                    <a asp-action="Create" asp-controller="Sales"
                        asp-route-id="@Model?.ProductID"
                        class="btn btn-lg btn-success"
                    >Comprar</a>
                </div>
            </div>
        </div>
    </div>
</div>
