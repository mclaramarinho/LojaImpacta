@model LojaImpacta.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<a asp-action="Index" class="btn btn-md btn-outline-none text-dark">
    <i class="bi bi-chevron-compact-left"></i>
    Voltar
</a>
<h1>Editar Produto</h1>
<hr />
<div class="container">
    <form asp-action="Edit" class="row align-items-start">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
        <input type="hidden" asp-for="ProductID" />
            
        <div class="col-12 col-md-6">

            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 m-auto col-md-6">
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="AmountAvailabel" class="control-label"></label>
                <input asp-for="AmountAvailabel" class="form-control" />
                <span asp-validation-for="AmountAvailabel" class="text-danger"></span>
            </div>
            <div class="form-group text-end">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </div>

    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
