@model LojaImpacta.Models.User
@{
    // var options = (IEnumerable<SelectListItem>)ViewBag.AccessLevelOptions;
}
<a asp-action="Index" class="btn btn-md btn-outline-none text-dark">
    <i class="bi bi-chevron-compact-left"></i>
    Voltar
</a>
<h1>CRIAR CONTA</h1>

<hr />
    <div class="container">
        <form asp-action="Create" class="row justify-content-between" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12 col-lg-5">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CPF" class="control-label"></label>
                    <input asp-for="CPF" class="form-control" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12 col-lg-5">
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPswd" class="control-label"></label>
                    <input asp-for="ConfirmPswd" class="form-control" />
                    <span asp-validation-for="ConfirmPswd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <select class="form-select" asp-for="AccessLevel" asp-items="@((IEnumerable<SelectListItem>)ViewData["AccessLevels"])"></select>
                    <span asp-validation-for="AccessLevel" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-5">
                <div class="form-group">
                    <label for="godPswd" class="control-label">Senha de cadastro:</label>
                    <input type="password" id="godPswd" name="godPswd" class="form-control" />
                </div>
                <input type="submit" value="Create" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
