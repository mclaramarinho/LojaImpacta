@model LojaImpacta.Models.User

@{
    ViewData["Title"] = "Details";
}
<a asp-action="Index" class="btn btn-md btn-outline-none text-dark">
    <i class="bi bi-chevron-compact-left"></i>
    Voltar
</a>
<h1>#@Model.UserID | @Model.Name</h1>

<div class="container">
    <div class="row justify-content-between">
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label class="form-label" for="username" class="fw-bold">Nome:</label>
                <input class="form-control" id="username" type="text" value="@Model.Name" disabled />
            </div>
            <div class="form-group">
                <label class="form-label" for="cpf" class="fw-bold">CPF:</label>
                <input class="form-control" id="cpf" type="text" value="@Model.CPF" disabled />
            </div>
            <div class="form-group">
                <label class="form-label" for="accesslvl" class="fw-bold">Nível de Acesso:</label>
                <input class="form-control" id="accesslvl" type="text" value="@Model.AccessLevel" disabled />
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label class="form-label" for="email" class="fw-bold">Email:</label>
                <input class="form-control" id="email" type="text" value="@Model.Email" disabled />
            </div>
            <div class="form-group">
                <label class="form-label" for="isActive" class="fw-bold">Conta ativa:</label>
                <input class="form-control" id="isActive" type="text" value="@(Model.AccountActive ? "Sim" : "Não")" disabled />
            </div>

            <div class="row mt-4 row-cols-auto justify-content-end">
                <div class="col">
                    <a asp-action="Delete"
                       asp-route-id="@Model?.UserID"
                       class="btn btn-sm btn-outline-danger">
                        Excluir
                    </a>
                </div>
                <div class="col">
                    <a asp-action="Edit"
                        asp-route-id="@Model?.UserID"
                        class="btn btn-sm btn-outline-primary">
                    Editar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

